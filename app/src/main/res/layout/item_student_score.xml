<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/studentNameText"
        style="@style/TableCell"
        android:layout_width="150dp"
        android:layout_height="match_parent" />

    <EditText
        android:id="@+id/assignmentScore"
        style="@style/TableEditText"
        android:layout_width="120dp"
        android:layout_height="match_parent" />

    <EditText
        android:id="@+id/homeworkScore"
        style="@style/TableEditText"
        android:layout_width="120dp"
        android:layout_height="match_parent" />

    <EditText
        android:id="@+id/midtermScore"
        style="@style/TableEditText"
        android:layout_width="120dp"
        android:layout_height="match_parent" />

    <EditText
        android:id="@+id/finalScore"
        style="@style/TableEditText"
        android:layout_width="120dp"
        android:layout_height="match_parent" />

    <EditText
        android:id="@+id/participationScore"
        style="@style/TableEditText"
        android:layout_width="120dp"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/totalScore"
        style="@style/TableCell"
        android:layout_width="120dp"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/averageScore"
        style="@style/TableCell"
        android:layout_width="120dp"
        android:layout_height="match_parent" />
</LinearLayout>